<div class="container">
	<div id="game-header">
		<div class="row">
			<div class="col-md-offset-2 col-md-2">
				<input type="hidden" value=<%-req.session.user_id %> id="user-id">
				<br><button type="submit" id="new-game" class="btn btn-success" >Create a new game</button></br>
			</div>
		</div>
		<div class="row">
			<div class="col-md-offset-2 col-md-6">
				<h3> Or Join one of the existing rooms!</h3>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<div id="games">
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-offset-1 col-md-2">
			<div id="leave-room">
			</div>
			<div id="start-game">
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-offset-1 col-md-10">
			<div id="game-scores">
			</div>
		</div>
	</div>
	<div class="row">
		<div class ="col-md-10 col-md-offset-1">
			<div id="game-room">
			</div>
		</div>
	</div>
<br><br><br><br><br>
</div>
