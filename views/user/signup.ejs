<div class="row">
	<div class="col-md-offset-4 col-md-4">
		<form class="form-vertical well" method="post" action="/signup">
			<legend>Sign Up!</legend>
		  <div class="form-group">
		    <label for="name" class="control-label">Choose a Screen name</label>
		    <input type="name" class="form-control" placeholder="Richi Rich" name="name">
		  </div>
		  <div class="form-group">
		    <label for="password" class="control-label">Password</label>
		    <input type="password" class="form-control" placeholder="Password" name="password">
		  </div>
		  <div class="form-group">
		  	<div class="text-center">
		    	<button type="submit" class="btn btn-default">Register</button>
		  	</div>
		  </div>
		  <a href="/login">Already a User? Sign In</a>
		</form>
	</div>
</div>